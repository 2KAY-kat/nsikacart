<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Exclude API
    RewriteRule ^api/ - [L]

    # Static files
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # SPA routing
    RewriteRule ^ index.html [L]
</IfModule>
